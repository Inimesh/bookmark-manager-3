<h1>Bookmarks</h1>

<div>
  <form action='/bookmarks' method='POST'>
    <input type="text" name="url" placeholder="URL">
    <input type="text" name="title" placeholder="Title">
    <input type="submit" value="Submit">
  </form>
</div>

<div>
  <ul>
    <% @all_bookmarks.each do |bookmark| %>
      <li>
        <a href="<%= bookmark.url %>">
          <%= bookmark.title %>
        </a>
      </li>
    <% end %>
  </ul>
</div>